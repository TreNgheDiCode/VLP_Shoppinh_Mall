<style>
    .fa-star {
        color: yellow;
    }
    .fa-facebook-messenger {
        color: darkblue;
    }
    .fa-twitter {
        color: lightskyblue;
    }
    .col-6 {
        padding: 0;
    }
    #price {
        background-color: lightgrey;
    }
</style>

<div class="container-fluid shadow rounded m-3 p-3">
    <div class="row">
        <div class="col col-md-4">
            <div class="p-3">
                <img class="img-fluid" src="@Model.AnhDaiDien" />
            </div>
            <div class="row px-3 pb-3">
                <div class="col-6">
                    <span>Chia sẻ: </span>
                    <i class="fa-brands fa-facebook-messenger text-primary me-2"></i>
                    <i class="fa-brands fa-facebook me-2"></i>
                    <i class="fa-brands fa-pinterest me-2 text-danger"></i>
                    <i class="fa-brands fa-twitter"></i>
                </div>
                <div class="col-6">

                </div>
            </div>
        </div>
        <div class="col col-md-8 p-3">
            <h5>@Model.TenSanPham</h5>
            <div class="d-flex">
                <span class="me-2 pe-2 border-end">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                </span>
                <span class="me-2 pe-2 border-end"><strong class="text-decoration-underline">@Model.LuotYeuThich</strong> Đã yêu thích</span>
                <span><strong class="text-decoration-underline">@Model.LuotMua</strong> Đã bán</span>
            </div>
            <div id="price" class="my-2 d-flex p-3">
                <h4 class="text-decoration-underline">đ</h4>
                <h2>@Model.GiaThanh</h2>
            </div>
        </div>
    </div>
</div>
