            <div class="row mb-2">
                <div class="col-4">
                    <img class="img-fluid" src="@Model.NhaTuyenDung.AnhDaiDien" />
                </div>
                <div class="col-8 align-self-center">
                    <h5>@Model.NhaTuyenDung.TenNhaTuyenDung</h5>
