<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VLPMall</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VLPMall.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-danger mb-4">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" id="logo-text">VLP MALL</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Club" asp-action="Index">Giới thiệu</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Danh mục
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Chi nhánh</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Thương hiệu</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Sản phẩm</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Hoạt động
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Tin tức</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Tuyển dụng</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Club" asp-action="Index">Liên hệ</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Account" asp-action="Register">Đăng nhập</a>
                        <span>&nbsp;hoặc&nbsp;</span>
                        <a asp-area="" asp-controller="Account" asp-action="Login">Đăng ký</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="b-example-divider"></div>

    <footer class="footer row py-0 border-top">
        <div class="col-lg-6">
            <div class="row">
                <div class="col">
                    <img class="w-25 img-fluid" src="http://res.cloudinary.com/drv0jpgyx/image/upload/v1688195699/tl71hghzh5ut6shhkkcu.jpg" alt="Card image cap" />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <img class="w-25 img-fluid" src="http://res.cloudinary.com/drv0jpgyx/image/upload/v1688195699/tl71hghzh5ut6shhkkcu.jpg" alt="Card image cap" />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <img class="w-25 img-fluid" src="http://res.cloudinary.com/drv0jpgyx/image/upload/v1688195699/tl71hghzh5ut6shhkkcu.jpg" alt="Card image cap" />
                </div>
            </div>
        </div>

        <div class="col-lg-6 text-center">
            <div class="row row-col-lg-3">
                <div class="col-lg-4">
                    <h5>THÔNG TIN</h5>
                    <ul class="nav flex-column text-center">
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Trang chủ</a></li>
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Giới thiệu</a></li>
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Danh mục</a></li>
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Hoạt động</a></li>
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Liên hệ</a></li>
                    </ul>
                </div>

                <div class="col-lg-4">
                    <h5>DANH MỤC</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Thương hiệu</a></li>
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Ẩm thực</a></li>
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Giải trí</a></li>
                    </ul>
                </div>

                <div class="col-lg-4">
                    <h5>HOẠT ĐỘNG</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Tin tức</a></li>
                        <li class="nav-item mb-0"><a href="#" class="nav-link p-0 text-muted">Tuyển dụng</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col ">
                    <img class="img-fluid w-25" src="http://res.cloudinary.com/drv0jpgyx/image/upload/v1688166288/ddm6oihpwdexzyomiids.png" alt="Card image cap">
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
